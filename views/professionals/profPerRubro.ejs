<!DOCTYPE html>
<html lang="en">

<head>

  <%- include("../partials/head-no-css") %>

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/theme.css" />
    <link rel="stylesheet" href="/css/productDetail.css" />
    <link rel="stylesheet" href="/css/productCart.css" />
    <link rel="stylesheet" href="/css/tablet.css" />
    <link rel="stylesheet" href="/css/tablet-index.css" />
    <link rel="stylesheet" href="/css/desktop-index.css" />
    <link rel="stylesheet" href="/css/desktop-productCart.css" />

    <title>Soluciones Profesionales</title>
</head>

<body>

  <%- include("../partials/header") %>
    <%- include("../partials/nav-bar") %>

      <main>
        <p class="title-cart">
          <%=rubro[0].jobTitle %>
        </p>
        <% for(let i=0; i<rubro.length; i++){ %>
          <div class="top-flex-mobile">
            <a href="/rubros/<%=rubro[i].jobTitle%>/<%=rubro[i].cuit%>">
              <div class="div-avatar">
                <div class="prof-avatar">

                </div>
              </div>
              <div class="div-descrption">
                <div class="title-per-device-productCart">
                  <%=rubro[i].jobTitle %>:
                </div>
                <div class="name-per-device-productCart">"<%=rubro[i].firstName +" "+ rubro[i].lastName%>" </div>
            </a>
          </div>
          <div class="reserved-date">
            <p>
              <%=rubro[i].jobDay %>
            </p>
          </div>
          <div class="reserved-date">
            <p>
              <% if(rubro[i].emergency=="Si" ){ %>
                <i class="fas fa-shipping-fast"></i>
                Urgencias
                <% } %>
            </p>
            <p>
              <%= rubro[i].jobZone %>
            </p>
          </div>

          <div class="price-button-preview">
            <div class="price-preview">
              <p>
                $<%=rubro[i].price %>
              </p>
            </div>
          </div>

          </div>
          <% } %>
            <div class="keepShopping-button">
              <a href="/rubros">
                <button type="submit">
                  Ver Mas Servicios
                </button>
              </a>
            </div>

            <%- include("../partials/ad-bottom-body") %>

      </main>

      <%- include("../partials/footer") %>

</body>

</html>