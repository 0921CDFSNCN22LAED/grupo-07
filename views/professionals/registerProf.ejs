    <title>Soluciones Profesionales</title>
</head>

<body>

  <%- include("../partials/header") %>
    <%- include("../partials/nav-bar") %>


      <main>
        <div class="all-registerProf">
          <form action="/rubros/registerProf" method="POST" enctype="multipart/form-data" class="prof-form">

            <div class="registerInput profesiones-list">
              <label>Profesiones:
                <!-- class="selectpicker" multiple -->
                <select name="professionId">

                  <% for (let i=0 ; i < uniqueProfession.length ; i++){%>

                    <option value="<%=uniqueProfessionId[i]%> " selected>
                      <%=uniqueProfession[i]%>
                    </option>

                    <% } %>
                      <option value="Otro">Otro</option>
                </select>
              </label>
            </div>
            <div class="registerInput">
              <label for="otherJob">Profesión (En Caso de No Estar Listada):
                <input type="text" name="otherJob" id="otherJob" placeholder="Ej: Programador WEB Full Stack">
              </label>
            </div>
            <div class="registerInput experience-list">
              <label for="have-licence">¿Tienes matrícula para realizar tu trabajo?
                <input type="checkbox" name="have-licence" id="have-licence">
                <input type="text" name="licence" id="licence" placeholder="Ingresa tu matrícula">
              </label>
              <!-- <label>Posee Matricula:
                <select name="have-licence">
                  <option value="no" selected>No</option>
                  <option value="yes">Si</option>
                </select>
              </label> -->
            </div>

            <!-- <div class="registerInput licence" id="licence-div">
              <label for="licence">Matricula (en Caso de Aplicar):
                <input type="text" name="licence" id="licence">
              </label>
            </div> -->
            <div class="registerInput localidad-list">
              <label>Zona de Prestacion de Servicio:
                <select name="workZone">
                  <!-- usar una API -->
                  <option value="1" selected>Capital Federal</option>
                  <option value="2">GBA Norte</option>
                  <option value="3">GBA Oeste</option>
                  <option value="4">GBA Sur</option>
                  <option value="5">Mendoza</option>
                  <option value="6">Cordoba</option>
                  <option value="7">Rosario</option>
                  <option value="8">Lejano Oeste</option>
                  <!-- usar api -->
                </select>
              </label>
            </div>
            <div class="registerInput expirience-list">
              <label>Atiende Emergencias:
                <select name="emergency">
                  <option value="1" selected>Si</option>
                  <option value="0">No</option>
                </select>
              </label>
            </div>

            <div class="dispo-dias">
              <p>Dias de Prestacion de Servicio:</p>
              <p class="shift-section">
                <span class="shift-day">Lunes</span>
                <label class="shift-range">(9-12am)
                <input type="checkbox" name="dayShift" value="1,1" checked></label>
                <label class="shift-range">(1pm-5pm)
                <input type="checkbox" name="dayShift" value="1,2" checked></label>
              </p>
              <p class="shift-section">
                <span class="shift-day">Martes</span>
                <label class="shift-range">(9-12am)
                <input type="checkbox" name="dayShift" value="2,1" checked></label>
                <label class="shift-range">(1pm-5pm)
                <input type="checkbox" name="dayShift" value="2,2" checkedd></label>
              </p>
              <p class="shift-section">
                <span class="shift-day">Miercoles</span>
                <label class="shift-range">(9-12am)
                <input type="checkbox" name="dayShift" value="3,1" checked></label>
                <label class="shift-range">(1pm-5pm)
                <input type="checkbox" name="dayShift" value="3,2" checked></label>
              </p>
              <p class="shift-section">
                <span class="shift-day">Jueves</span>
                <label class="shift-range">(9-12am)
                <input type="checkbox" name="dayShift" value="4,1" checked></label>
                <label class="shift-range">(1pm-5pm)
                <input type="checkbox" name="dayShift" value="4,2" checked></label>
              </p>
              <p class="shift-section">
                <span class="shift-day">Viernes</span>
                <label class="shift-range">(9-12am)
                <input type="checkbox" name="dayShift" value="5,1" checked></label>
                <label class="shift-range">(1pm-5pm)
                <input type="checkbox" name="dayShift" value="5,2" checked></label>
              </p>
              <p class="shift-section">
                <span class="shift-day">Sabado</span>
                <label class="shift-range">(9-12am)
                <input type="checkbox" name="dayShift" value="6,1"></label>
                <label class="shift-range">(1pm-5pm)
                <input type="checkbox" name="dayShift" value="6,2"></label>
              </p>
              <p class="shift-section">
                <span class="shift-day">Domingo</span>
                <label class="shift-range">(9-12am)
                <input type="checkbox" name="dayShift" value="7,1"></label>
                <label class="shift-range">(1pm-5pm)
                <input type="checkbox" name="dayShift" value="7,2"></label>
              </p>

            </div>

            <div class="registerInput whyme">
              <label for="whyMe">Porque Deberian Elegirte?
                <textarea name="whyMe" id="whyMe" placeholder="Max 600 Caracteres"></textarea>
              </label>
            </div>
            <div class="registerInput">
              <label for="price">Precio de tu Reserva en $:
                <input type="number" name="price" id="price" placeholder="300" value="300">
              </label>
            </div>

            <div class="registerInput jobs">
              <label for="workImages">Fotos de Trabajos Realizados (max 10)
                <input type="file" name="workImages" accept=".jpg, .png, .bmp" multiple>
              </label>
            </div>
            <div class="registerInput">
              <label for="cbu">N° de CBU/CVU (para deposito de reservas):
                <input type="number" name="cbu" id="cbu">
              </label>
            </div>


            <div class="confirm-button">
              <button type="submit">Crear</button>
            </div>
        </div>
        </form>
        </div>
        </section>

        <%- include("../partials/ad-bottom-body") %>

      </main>

      <%- include("../partials/footer") %>

</body>

</html>